package com.company;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        int arr[]={11,22,33,44,55};

        // Display the array (Naive way) or (slowest, longest, difficult way)
        System.out.println("Display array elements using Naive way....");
        System.out.println(arr[0]);
        System.out.println(arr[1]);
        System.out.println(arr[2]);
        System.out.println(arr[3]);
        System.out.println(arr[4]);

        System.out.println();

        System.out.println("Display array elements using for loop.....");

        for (int i = 0; i < arr.length; i++) {
            System.out.println(arr[i]);
        }
        System.out.println();

        System.out.println("Display array elements using For each loop....");

        for(int element:arr){
            System.out.println(element);
        }


    }
}
