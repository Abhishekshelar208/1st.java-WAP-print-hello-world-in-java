package com.company;

import java.util.Scanner;

public class Square {
     static void initialize(int n){
         System.out.println("Enter side of square:");
         float area = n;
         System.out.println("Your square side is:"+area);

    }
    static void calculating(int n){
      float area = n;
        System.out.println("Area of your square is:"+(area*area));
    }

    public static void main(String[] args) {
        initialize(5);
        calculating(5);
    }

}
