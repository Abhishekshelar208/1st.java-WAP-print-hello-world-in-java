//write a program to find factorial number using for loop in java
//coded By Abhishek Dadasaheb Shelar.

package com.company;

import java.util.Scanner;

class Main{

    static int factrial(int n){
        if(n==0 || n==1){
            return 1;
        }
        else
        {
            int product = 1;
            for (int i = 1; i <=n ; i++) {
                product *= i;
            }
            return product;
        }
    }
    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        System.out.println("Enter any no:");
        int a=s.nextInt();

        System.out.println("Factorial of your entered number is:"+ factrial(a));


    }
}
