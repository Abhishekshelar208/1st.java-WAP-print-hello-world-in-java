package com.company;

import java.util.Scanner;

public class Main{
    static int factorial(int n){
        if(n==0 || n==1 ){
            return 1;

        }
        else{
            int product = 1;
            for (int i = 1; i <=n ; i++) {
                product *= i ;
            }
            return product;
        }
    }
    public static void main(String[] args) {
        int x = 5;
        System.out.println("The value of factorial x is:"+factorial(x));
    }

}

