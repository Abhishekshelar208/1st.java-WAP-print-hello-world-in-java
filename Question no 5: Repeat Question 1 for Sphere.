package com.company;

import java.util.Scanner;

class Sphere{
    private int radius;

    public void getRadius(int r) {
        radius = r;
        System.out.println(4* radius * Math.PI * radius * radius * radius);
    }


}
class Main{
    public static void main(String[] args) {
        Sphere s=new Sphere();
        s.getRadius(12);
    }
}
