//write a program to create a password and rename that password according to the user. in java.
//coded BY Abhihske Dadasaheb Shelar.

package com.company;

import java.util.Scanner;

class Main{
    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        System.out.println("Create a password:");
        int pass1=s.nextInt();

        System.out.println("Enter old password:");
        int pass2=s.nextInt();

        if(pass1==pass2){
            System.out.println("Enter new password:");
            int pass3=s.nextInt();
            System.out.println("confirm password:");
            int pass4=s.nextInt();
            if(pass3==pass4){
                System.out.println("Your password is changed sucessfully..");
            }else{
                System.out.println("password does not matched....");
            }
        }else{
            System.out.println("Wrong password....please try again...");
        }
    }
}
