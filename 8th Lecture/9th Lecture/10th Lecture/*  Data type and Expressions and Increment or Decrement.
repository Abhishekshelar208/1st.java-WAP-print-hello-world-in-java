 Data type and Expressions and Increment or Decrement.
 */
//coded BY Abhishek Dadasaheb shelar.

package com.company;

class Main{
  public static void main(String[] args)   //Main method
  {
    /*
    byte + short = int
    short + int = int
    long + float = float
    int + float = float
    char + int = int
    char + short = int
    long + double = double
    float = double = double.
     */
    byte x = 5;
    int y = 6;
    short z = 8;
    int a = y + z;  //int + short = int.
    float b = 6.54f + x;  // float + byte = float.
    System.out.println(b);   //Printing the value of b.

    // Increment and Decrement Operators.

    int i = 56;
    int b1 = i++; // first b is assigned i (56) then i is incremented.
    int j = 67;
    int c = ++j;   // first j is incremented then c is assigned j (68).
    System.out.println(i++);
    System.out.println(i);
    System.out.println(++i);
    System.out.println(i);
    int y1 = 7;
    System.out.println(++y *8);   //Printing the answer to the user.

  }
}
